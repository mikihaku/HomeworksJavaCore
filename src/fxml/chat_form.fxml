<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ChatController"  fx:id="vbox" >
    <stylesheets><URL value="@/css/styles-chat.css" /> </stylesheets>
    <ScrollPane fx:id="scroll" VBox.vgrow="ALWAYS" >
        <content>
            <GridPane alignment="center"
                      hgap="10"
                      vgap="4"
                      fx:id="base"
                      >
                <padding><Insets top="10" right="10" bottom="10" left="18"/></padding>
                <columnConstraints>
                    <ColumnConstraints minWidth="270" prefWidth="270" maxWidth="Infinity" halignment="left">
                    </ColumnConstraints>
                    <ColumnConstraints minWidth="270" prefWidth="270" maxWidth="Infinity" halignment="right">
                    </ColumnConstraints>
                </columnConstraints>

            </GridPane>
        </content>
    </ScrollPane>
    <HBox alignment="CENTER" spacing="10" fx:id="inputs">
        <VBox.margin>
            <Insets top="10" right="5" bottom="10" left="5" />
        </VBox.margin>
        <TextField fx:id="inputField" onAction="#sendMsg" promptText="Введите сообщение" HBox.hgrow="ALWAYS"  />
        <Button fx:id="btn" onAction="#sendMsg" text="Отправить" />
    </HBox>
</VBox>
